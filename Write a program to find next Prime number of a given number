// Write a program to find next Prime number of a given number 

#include<stdio.h>
#include<conio.h>

    void main()
{
      int x,count;
        printf("Enter a number ");
        scanf("%d",&x);
    
        x=x+1;
    while (x)
    {   count=0;
    for (int i = 2; i <= x; i++)
     if (x%i==0)
                count++;
     
    if(count==1) {
    printf("%d  ",x);
    break;
    }
     
         x++;
    } 
        
    getch();
}
