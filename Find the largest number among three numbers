    //  C program to find the largest number among three numbers

    #include<stdio.h>
    #include<conio.h>
    
        void main()
    {
 
      int x,y,z;
    printf("Enter the number in x = ");
    scanf("%d",&x);
    printf("Enter the number in y = ");
    scanf("%d",&y);
    printf("Enter the number in z = ");
    scanf("%d",&z);

    if (x>y && x>z)
    {
      printf("%d is greater than %d , %d ",x,y,z);
    }
    
    if(y>x && y>z)
    {
      printf("%d is greater than %d , %d ",y,z,x);
    }

    if (z>y && z>x)
    {
      printf("%d is greater than %d , %d",z,x,y);
       
    }
    
         getch();
    }
