//  C program to print pyramids and patterns
#include<stdio.h>

    int main()
{
        for (int i = 0; i < 4; i++)
        {  for (int j=1; j<=7; j++)
            if( j>3-i && j<5+i)
              printf(" *");
            else
              printf("  ");

            printf("\n");
        }
        
        
    return 0;
}
