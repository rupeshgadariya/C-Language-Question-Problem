/* Write a program which takes the day number of a week and displays a unique greeting 
    message for the day  */
#include<stdio.h>
#include<conio.h>
#include<stdlib.h>

    void main()
{  
       int a; 
       printf("Enter the day number of a week ");
       scanf("%d",&a);
    switch (a)
    {
    case 1:  printf("\nHappy Sunday! \nA day to rest");
             break;
    case 2:  printf("\nGood Monday morning! \nA fresh start to the week");
             break;
    case 3:  printf("\nHappy Tuesday! \nThe week is in full swing");
             break;
    case 4:  printf("\nHappy Wednesday! \nHalfway through the week");
             break;
    case 5:  printf("\nHappy Thursday! \nThe finish line is in sight!");
             break;
    case 6:  printf("\nIt's Friday! \nYou made it!");
             break;
    case 7:  printf("\nHappy Saturday! \nTake this day to unwind");
             break;
    default:    printf("Please Enter 1 to 7 number");
        
    }
    getch();
}  

        
