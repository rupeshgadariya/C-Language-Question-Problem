        //   C program to find factorial of a number 

 #include<stdio.h>
 #include<conio.h>
 
      void main()
    {

        int x,i=1,factorial=1;
  printf("Enter the number ");
  scanf("%d",&x);

        while (i<=x)
        {
           factorial=factorial*i;
             i++;
        }
             printf("\nFactorial of %d! = %d",x,factorial);
        

        getch();
    }
