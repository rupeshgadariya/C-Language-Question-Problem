/* Convert the following if-else-if construct into switch case: 
      if(var == 1) 
      printf("good"); 
      else if(var == 2) 
      printf("better"); 
      else if(var == 3) 
      printf("best"); 
      else 
      printf("invalid");           */
#include<stdio.h>
#include<conio.h>

    void main()
{
        int x;
    printf("Enter a number ");
    scanf("%d",&x);
    switch (x)
    {
    case 1:     printf("good"); 
        break;
    case 2:     printf("better");
        break;
    case 3:     printf("best");
        break; 
    default:    printf("invalid"); 
        break;
    }
getch();
}
