    //   C program to check whether a number is positive or negative 


#include<stdio.h>
#include<conio.h>

    void main()
{
    float x;
    printf("Enter any value = ");
    scanf("%f",&x);

    if (x>0)
    {
      printf("\nThis value is Positive number ");
    }
 
else
  {  printf("\n This is Negative number");   }
    

    getch();
}
